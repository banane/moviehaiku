<h1>Listing poets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>

<% @poets.each do |poet| %>
  <tr>
    <td><%=h poet.name %></td>
    <td><%=h poet.email %></td>
    <td><%= link_to 'Show', poet %></td>
    <td><%= link_to 'Edit', edit_poet_path(poet) %></td>
    <td><%= link_to 'Destroy', poet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New poet', new_poet_path %>